---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const allPost = await Astro.glob('../pages/posts/*.md');
import '../styles/global.css'
const pageTitle = "Blog";
---

<BaseLayout pageTitle={pageTitle}/>
  <h1>Mi sitio Astro</h1>
  <h1>Mi blog de aprendizaje de Astro</h1>
  <p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>

  <ul>
    {allPost.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>

